. ~/.shell/interactive

# terminal resize
shopt -s checkwinsize

# no duplicate lines in history
HISTCONTROL=ignoredups:ignorespace

# append to history, not overwrite
shopt -s histappend

# history size
HISTSIZE=1000
HISTFILESIZE=2000

# prompt
LTBLUE="\[\e[94m\]"
BLUE="\[\e[34m\]"
RESET="\[\e[0m\]"
PS1="${BLUE}\u@\h${RESET}:${LTBLUE}\w${RESET} $ "
