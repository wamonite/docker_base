# interactive env vars and aliases

alias ddev='cd /data/django/dev/mysite'
alias mdev='cd /data/mbss/dev'
alias taila='tail -n 200 -f /var/log/nginx/access.log'
alias tailc='tail -n 200 -f /var/log/nginx/cache.log'
alias taile='tail -n 200 -f /var/log/nginx/error.log'

# enforce vi
export EDITOR=vi

# enable colour
export CLICOLOR=1

# if in a terminal
if [ -t 0 ]; then
    # other users shouldn't be able to message by default
    mesg n
fi
